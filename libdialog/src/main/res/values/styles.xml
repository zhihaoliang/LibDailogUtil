<resources>
    <style name="Theme.Light.FullScreenDialogAct" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@mipmap/bg_tm</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffa19d94</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="qzone_qZoneInputDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="DialogButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@drawable/btn_dialog</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="DialogButton.Left" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_left</item>
    </style>

    <style name="DialogButton.Right" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_right</item>
    </style>
</resources>